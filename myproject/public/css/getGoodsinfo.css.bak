*{padding: 0;margin: 0;border: none;}
#top_head{width: 100%;margin: 0 auto;/* border-top: 1px solid #616161;*/ /*height: 82px;*/}
#top{ width: 1200px;margin: 10px auto;}
#top_con{position: relative; margin:0 auto; height: 27px;}
#top_left{width: 20px;height: 20px;background-image:url(../images/indeximages/index.png);display: inline-block;margin-left: 12px;margin-bottom: -8px;}
#top_ul li{float: left;line-height: 20px;}
#top_ul{list-style:none;position:relative;}
#top_li{position:absolute;}
#top_ul a{text-decoration:none;color:#616161;margin-left: 30px; padding:0;border: 0;font-size: 12px;margin-right: 8px;}
#top_ul a:hover,#top_ul_right a:hover{ text-decoration: underline;color: #f00;}
#top_ul_right{ list-style-type: none;position: relative;}
#top_ul_right a{ text-decoration: none;color: #616161;font-size: 12px;margin-right: 10px;}
#top_ul_right img{width: 20px;height: 20px;margin-right: 3px;margin-bottom: -5px;}
#top_ul_right {float:right;}
#top_ul_right li{display: inline-block;}
#top_down{width: 1200px;height: 81px;padding-top: 20px;margin: 0 auto;text-align: center;}
#top_down::after{ content: "";display: block;clear: both;}
#top_img{margin:0 auto; width: 260px;float: left;}
#top_down_right {float:left;width:20px;height:20px;background-image:url(../images/indeximages/shopping_logo.png);background-repeat: no-repeat;margin-right: 5px;}
#top_input{width: 310px;height: 21px;border: 1px solid #aaa; float: left; border-radius: 8px;margin-left: 100px;margin-right:200px;}
#top_nav{height: 16px;}
#top_nav ul{list-style: none;float: left;margin-top: 20px;margin-left: 20px;}
#top_nav ul li{display: inline-block;height: 16px;margin:0 20px;}
#top_nav ul li a{}
#top_right{float: left;margin:0 auto;}
#top_right a{text-decoration: none;color: #616161;}
#top_right p{background-image: url(../images/indeximages/phone_icon.jpg);background-repeat: no-repeat;padding-left: 25px;margin-left:50px; float: left;height: 20px;}
#top_nav ul li a{text-decoration: none;color: #000;font-size: 16px;}
#top_nav ul li a:hover{color: #f00;}
#nav{width:100%;height: 30px;background-color: #e51e13;box-shadow:1px 1px 6px #ae3232; text-align: center;}
#nav_con{width: 1200px;height: 35px;margin: auto;list-style: none;}
#nav_con li{display: inline-block;float: left;height: 35px;line-height: 30px;}
#nav_con li a{text-decoration: none;color: #fff;font-size: 18px;margin: 0 20px;}
#nav_con li a:hover{width:78px;height:30px;background-color: orange; display: inline-block;}
#goods_detail{width: 100%;margin:0 auto;}
#goods_detail_nav{width:1200px;height:20px;margin-top:20px;}
#goods_detail_nav a{text-decoration: none;color:#666;}
#goods_detail_nav a:hover{text-decoration:underline;color:#f1cf5c;}
#goods{width:1200px;height:500px;margin:0 auto;}
#good_img{width:430px;height:450px;float:left;margin-bottom:60px;margin-right:20px;}
#preview{width:430px;height:430px;}
#spec_scroll{width:430px;margin-top:10px;margin-bottom:30px;}
#spec_scroll #prev,#spec_scroll #next{width:30px;height:64px;display:block;background:#eee;color:#bbb;font-size:24px;font-family:"宋体";text-align:center;line-height:64px;cursor:pointer;}
#spec_scroll #prev{float:left;}
#spec_scroll #next{float:right;}
#items{width:336px;height:64px;float:left;margin-left:20px;margin-top:-20px;}
#items ul li{float:left;margin-right:20px;}
#items ul{box-sizing:border-box;}
#items ul #items_imgl,#items ul #items_imgc,#items ul #items_imgr{padding-left:1px;padding-right:1px;padding-top:3px;border:1px solid #e1e1e1;}
#items ul #items_imgl:hover,#items ul #items_imgc:hover,#items ul #items_imgr:hover{padding-left:1px;padding-right:1px;padding-top:3px;border:2px solid #000;}
#good_des{width:750px;height:380.5px;float:left;}
#good_des #good_des_name{height:36px;line-height:36px;font-size:20px;font-weight:700;}
#good_des #good_des_pri{width:750px;height:40.5px;background:#f0f0f0;}
#good_des ul li{line-height:38px;font-size:14px;padding-left:20px;}
#good_des ul li #good_price{font-size:20px;color:#c40000;}
#good_des #good_des_ser #good_ser_li{margin-bottom:-15px;margin-top:10px;}
#good_des_num{margin-top:80px;margin-bottom:20px;}
#good_des_num li{display:inline-block;}
#good_des_num #good_num_li{font-size:12px;font-weight:bold;margin-right:20px;}
#good_des_num #good_num_li2{width:100px;height:27px;background:#f0f0f0;line-height:27px;border:1px solid #e8e8ea;}
#good_des_num #good_num_li2 a{width:18px;height:20px;display:inline-block;}
#good_des_num #good_num_li2 input{width:40px;height:22px;line-height:20px;text-align:center;border:1px solid #bebebf;}
#good_des_opt li{float:left;}
#good_des_opt li a{display:block;}
#good_des_opt #good_buy,#good_des_opt #good_car{width:134px;height:34px;line-height:34px;text-align:center;font-size:16px;border-radius:2px;}
#good_des_opt #good_buy{background:#ffeded;border:1px solid #d2605e;color:#d2605e;}
#good_des_opt #good_car{padding-left:10px;background:#e51e13;color:#fff;border:1px solid #e51e13;background-image:url(../images/indeximages/inner.png);background-repeat:no-repeat;background-position:7px 8px;}
#goods_adv{width:100%;}
#goods_adv #glc_lt{width:1200px;margin:0 auto;}



.footer{width: 100%;font-family: "微软雅黑";margin:0 auto;clear:both;}
.footer .footer_img{width:1200px;}
.footer_child{width:1200px;margin:0 auto;padding-top: 20px;clear:both;}
.footer_left{width: 300px;float: left;}
.footer_left_one{width: 220px;}
.footer_left_one p,.footer_left_two p,.footer_left_three p{font-size: 13px;padding-left:20px; }
.footer_left_two{margin-bottom: 20px;}
.footer_left_one p{width: 220px;background-image: url(../images/indeximages/zbdz.jpg); background-repeat:no-repeat;background-size:  20px 20px;margin-bottom: 20px;}
.footer_right{float: right;width: 900px;}
.footer_right ul{list-style: none;position: relative;float: left;width: 266px;margin-bottom: 50px;}
.footer_right p{display:inline-block;}
.footer_right ul li a{text-decoration:none;font-size:12px;color:#616161;margin-left:25px;line-height:1px;}
.footer_right_li{display:inline-block;margin-right:5px;}
.footer_right_li img{width:20px;height:20px;}
.footer_right_li_two{display:inline-block;position:absolute;}
.footer_right_li_two h3{font-weight:normal;font-size:16px;}